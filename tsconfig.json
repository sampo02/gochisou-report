{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "types": ["@types/node", "@nuxt/types", "@nuxtjs/firebase"]
  },
  "exclude": ["node_modules"]
}
